extends layout

block content
    div(class='topbar')
        a(href='http://localhost:9001/logout')
            p Log out
    if(locals.colors)
        script.
            var col = "#{locals.colors}";

            window.onload=function(){
                initColor(col);
            }
    else
        h1 no color
    
    div(class='center')
        a(href='http://localhost:9001/')
            h1 onewordstory.

        div(class='colorbox largetopmargin', id='color')
        
        form(action='/settings/color', method='POST')
            label 
            #
            input(type='text', name='user[colors]', onkeyup='changeColor(this.value, this)', class='input', id='colorinput', placeholder='Pick color', maxlength='6')
            input(type='submit', class='button', id='sender', value='Pick')
        
        div(class='largetopmargin')
            input(type='text', class='input', placeholder='Create new story')
            input(type='submit', class='button',  id='sender', value='Create')
